<div class=container>

    <% for mx in @filteredmovies %>

        <div class="row" id="movie_<%= mx.id %>">

            <div class="col-md-4">
                <img class=movieposter src= <%= mx.imgurl %> </img>
            </div>

            <div class="col-md-4">

                <div class='ratings-bar'>
                    <div  class="ratings-bar-el">
                        <h4><%= mx.title %></h4>
                    </div>

                    <div  class="ratings-bar-el">
                        IMDB:
                        <%= mx.imdbscore %>
                    </div>

                    <div  class="ratings-bar-el">
                        Metascore:
                        <%= mx.metascore %>
                    </div>

                </div> <!-- ratings-bar'-->

                <a target = _blank href="<%= mx.launchurl %>"> <%= mx.launchurl %>  </a>

            </div> <!-- col-md-4 -->

            <div class="col-md-4">
                <%= mx.description %>
            </div>

        </div>
    <% end %>

</div>
